{% extends "::base.html.twig" %}

{% block title %}Gestion de la relation Ã  Azure{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-header">
            <h1>Azure <small>Gestion des relations entre groupes Office 365 et Adhesion</small></h1>
        </div>
        <div class="row">
            <div class="col-md-9">
                <table class="table table-hover ">
                    <thead>
                        <tr>
                            <td>Groupe Azure</td>
                            <td>Roles</td>
                            <td></td>
                        </tr>
                    </thead>
                    {% for role in roles %}
                        <tr>
                            <td class="">{{ role.azureGroupName }}</td>
                            <td class="">{{ role.roles|join(', ') }}</td>
                            <td style="width: 100px">
                                <a href="{{ url("bde_main_azure_link_delete",{id:role.id}) }}" class="btn btn-danger">{{ icon("remove") }}</a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="col-md-3">
                <h4>Ajouter un lien</h4>
                {{ form(new_form,{action: url('bde_main_azure_link_new')}) }}
            </div>
        </div>
    </div>
{% endblock %}
