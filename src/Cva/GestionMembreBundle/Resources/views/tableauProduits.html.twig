{% extends '::base.html.twig' %}

{% import '::navbar.html.twig' as navbar %}

	{% block title %} Gestion des Produits {% endblock %}

	{% block navbar %}
		{{ navbar.input('','','','active') }}
	{% endblock %}
	
	{% block content %}
	
		<div class = container>
			<div class="row">
				<div class="span8">
					<table class="table table-bordered">
					  <thead>
 						<tr>
							<th>
								Description
							</th>
							<th>
								Prix
							</th>
							<th>
								Disponibilite
							</th>
							<th>
							</th>
						</tr> 
					  </thead>					  
					  <tbody id="products">
					  
						{% for prod in produit %}
								<tr id="{{ prod.id }}">
									  <td>{{ prod.description}}</td>
									  <td>{{ prod.price }}</td>
									  <td>{{ prod.disponibilite }}</td>
									  <td>
									  <a class="btn" href="editProduit?id={{ prod.id }}">Editer</a>
									  </td>
								</tr>	
								<div id="id{{ prod.id }}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
									  <div class="modal-header">
											<button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
											<h3 id="myModalLabel">Confirmation</h3>
									  </div>
									  <div class="modal-body">
											<p>Voulez-vous vraiment supprimer ce produit ?</p>
									  </div>
									  <div class="modal-footer">
											<button class="btn" data-dismiss="modal" aria-hidden="true">Non</button>
											<a role="button" href="deleteProduit?id={{ prod.id }}" class="btn btn-primary">Oui</a>
									  </div>
								</div>	
						{% endfor %}	
					  </tbody>
					</table>
				</div>
			
				
			</div>
		</div>
		
{% endblock %}
		
