{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="container">
        <div class="page-header">
            <h1>Connexion <small>vous devez vous connecter pour continuer</small></h1>
        </div>
        <div class="row">
            {#<div class="col-md-6  col-md-offset-3">#}
                {#<a onclick="document.getElementById('login').style.display = 'block'; this.style.display='none'" style="margin-top: 20px;width: 100%;" class="btn btn-primary">Se connecter avec un compte Système</a>#}
            {#</div>#}
            {#<div class="col-md-3"></div>#}
            <div class="col-md-6 col-md-offset-3" id="login" style="margin-top: 20px;">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required"  placeholder="Identifiant">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="password" class="form-control" id="_password" name="_password" placeholder="Mot de passe">
                        </div>
                    </div>
                    <input type="hidden" value="0" id="remember_me">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <button type="submit" id="_submit" name="_submit" class="btn btn-primary btn-block">Connexion</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-6  col-md-offset-3">
                <a href="{{ url("hwi_oauth_service_redirect",{service:"bde_azure"}) }}" style="width: 100%;" class="btn btn-default">Se connecter avec un compte BdE INSA Lyon (cassé!)</a>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
{% endblock fos_user_content %}